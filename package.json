{
  "name": "otto",
  "version": "1.0.0",
  "description": "article editor and deployment pipeline",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist:win": "electron-builder --windows",
    "dist:linux": "electron-builder --linux",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/suu-b/Otto.git"
  },
  "keywords": [
    "git",
    "pipeline",
    "text-editor"
  ],
  "author": {
    "name": "suu-b",
    "email": "suub.author@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/suu-b/Otto/issues"
  },
  "homepage": "https://github.com/suu-b/Otto#readme",
  "devDependencies": {
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "dompurify": "^3.2.6",
    "marked": "^16.2.1"
  },
  "build": {
    "appId": "com.suub.otto",
    "productName": "Otto",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/otto.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/otto.png"
    }
  }
}
